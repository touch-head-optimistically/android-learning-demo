<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal"
    	android:layout_weight="3"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	>
        <ImageView 
            android:id="@+id/game3_image_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a1"
            android:layout_marginRight="10dp"
            />
        
        <ImageView 
            android:id="@+id/game3_image_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a2"
            android:layout_marginRight="10dp"
            />
        
        <ImageView 
            android:id="@+id/game3_image_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a3"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal"
    	android:layout_weight="3"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	>
        <ImageView 
            android:id="@+id/game3_image_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a4"
            android:layout_marginRight="10dp"
            />
        
        <ImageView 
            android:id="@+id/game3_image_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a4"
            android:visibility="invisible"
            android:layout_marginRight="10dp"
            />
        
        <ImageView 
            android:id="@+id/game3_image_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a6"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal"
    	android:layout_weight="3"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	>
        <ImageView 
            android:id="@+id/game3_image_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a7"
            android:layout_marginRight="10dp"
            />
        
        <ImageView 
            android:id="@+id/game3_image_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a8"
            android:layout_marginRight="10dp"
            />
        
        <ImageView 
            android:id="@+id/game3_image_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a9"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal"
    	android:layout_weight="1"
    	android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="35dp"
    	>
        <Button 
            android:id="@+id/game3_bet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下注"
            android:textSize="25sp"
            android:background="#EE0000"
            />
        <Button 
            android:id="@+id/game3_inv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            />
        <Button 
            android:id="@+id/game3_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="开始"
            android:textSize="25sp"
            android:background="#00CD66"
            />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/game3_money"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="10000"
        android:textSize="25sp"
        android:background="#FFFF00"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="35dp"
        />
    
</LinearLayout>