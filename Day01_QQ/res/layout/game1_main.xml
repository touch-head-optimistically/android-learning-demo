<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bfefff"
    >

    <ImageView 
        android:id="@+id/game1_image"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:background="@drawable/aq"
        android:layout_marginTop="10dp"
		/>

    <TextView 
        android:id="@+id/game1_t0"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#faebd7"
        android:text="室友1"
        android:textSize="22sp"
        android:layout_margin="6dp"
        android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/game1_t1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
 		android:gravity="center"
 		android:background="#f5deb3"
        android:text="室友2"
        android:textSize="22sp"
        android:layout_margin="6dp"
        android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/game1_t2"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#eedfcc"
        android:text="室友3"
        android:textSize="22sp"
        android:layout_margin="6dp"
        android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/game1_t3"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#eed5b7"
        android:text="室友4"
        android:textSize="22sp"
        android:layout_margin="6dp"
        android:visibility="invisible"
        />
    
    <Button 
        android:id="@+id/game1_again"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="我不服，再来一次！"
        android:background="#FFDA89"
        android:layout_margin="6dp"
        android:visibility="invisible"
        />
    
   </LinearLayout>
